{
   "$id": "https://silentarctic.github.io/schemas/quality_schema.json",
   "type": "array",
   "items": {
      "type": "object",
      "properties": {
         "name": {
            "type": "string"
         },
         "page": {
            "type": "integer"
         },
         "activation": {
            "type": "string",
            "enum": [
               "active",
               "passive"
            ]
         },
         "gearType": {
            "type": "string",
            "enum": [
               "any",
               "armor",
               "weapon",
               "vehicle"
            ]
         },
         "description": {
            "$ref": "varyingDisplay_sub_schema.json"
         },
         "id": {
            "type": "string",
            "description": "Unique item id. You shouldn't have to touch this field."
         }
      },
      "required": [
         "name",
         "activation",
         "gearType",
         "description"
      ],
      "optional": [
         "page"
      ],
      "additionalProperties": false
   }
}