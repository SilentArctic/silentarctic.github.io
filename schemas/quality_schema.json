{
   "$id": "https://silentarctic.github.io/schemas/quality_schema.json",
   "description": "Schema for quality entries applied to gear and vehicles.",
   "type": "array",
   "items": {
      "type": "object",
      "properties": {
         "name": {
            "type": "string",
            "description": "Quality name."
         },
         "page": {
            "type": "integer",
            "description": "Source page reference."
         },
         "activation": {
            "type": "string",
            "enum": [
               "active",
               "passive"
            ],
            "description": "Whether the quality must be triggered (active) or is always in effect (passive)."
         },
         "gearType": {
            "type": "string",
            "enum": [
               "any",
               "armor",
               "weapon",
               "vehicle"
            ],
            "description": "What gear category the quality can apply to."
         },
         "description": {
            "$ref": "varyingDisplay_sub_schema.json"
         },
         "id": {
            "type": "string",
            "description": "Unique item id. You shouldn't have to touch this field."
         }
      },
      "required": [
         "name",
         "activation",
         "gearType",
         "description"
      ],
      "optional": [
         "page"
      ],
      "additionalProperties": false
   }
}
