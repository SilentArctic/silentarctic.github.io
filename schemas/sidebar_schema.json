{
   "$id": "https://silentarctic.github.io/schemas/sidebar_schema.json",
   "type": "array",
   "items": {
      "type": "object",
      "properties": {
         "name": {
            "type": "string",
            "description": "Sidebar name."
         },
         "page": {
            "type": "integer",
            "description": "Page number on which the sidebar is found."
         },
         "type": {
            "type": "string",
            "description": "Sidebar type classification. Used for filtering."
         },
         "description": {
            "$ref": "./varyingDisplay_sub_schema.json",
            "description": "Sidebar text and other information."
         },
         "summary": {
            "type": "array",
            "items": {
               "type": ["string", "integer"]
            },
            "description": "Deprecated. Shortened summary that will appear in popovers."
         }
      },
      "required": [
         "name",
         "type",
         "description"
      ],
      "optional": [
         "page",
         "summary"
      ],
      "additionalProperties": false
   }
}