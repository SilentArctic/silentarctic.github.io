{
   "$id": "https://genesysref.netlify.app/schema/optionFeature_schema.json",
   "type": "array",
   "items": [
      {
         "type": "object",
         "properties": {
            "name": {
               "type": "string"
            },
            "page": {
               "type": "integer"
            },
            "type": {
               "type": "string"
            },
            "class": {
               "type": "string"
            },
            "labels": {
               "type": "array",
               "items": {
                  "type": "object",
                  "properties": {
                     "name": {
                        "type": "string"
                     },
                     "description": {
                        "type": ["string", "integer"]
                     }
                  },
                  "required": [
                     "name",
                     "description"
                  ],
                  "additionalProperties": false
               }
            },
            "description": { "$ref": "_varyingDisplay_schema.json" },
            "info": { "$ref": "_varyingDisplay_schema.json" },
            "summary": {
               "type": "array",
               "items": {
                  "type": "string"
               }
            },
            "meta": {
               "type": "object"
            },
            "settings": { "$ref": "_settings_schema.json" }
         },
         "required": [
            "name",
            "type",
            "description"
         ],
         "optional": [
            "page",
            "labels",
            "info",
            "summary",
            "class",
            "meta",
            "settings"
         ],
         "additionalProperties": false
      }
   ]
}