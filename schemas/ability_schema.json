{
   "$id": "https://silentarctic.github.io/schemas/ability_schema.json",
   "type": "array",
   "items": {
      "type": "object",
      "properties": {
         "name": {
            "type": "string",
            "description": "Ability name."
         },
         "description": {
            "$ref": "varyingDisplay_sub_schema.json",
            "description": "Ability details"
         },
         "tags": {
            "$ref": "item_tags_sub_schema.json",
            "description": "Applicable tags for filtering."
         },
         "id": {
            "type": "string",
            "description": "Unique item id. You shouldn't have to touch this field."
         }
      },
      "required": [
         "name",
         "description",
         "tags"
      ],
      "additionalProperties": false
   }
}
