{
   "$id": "https://silentarctic.github.io/schemas/skill_schema.json",
   "type": "array",
   "items": {
      "type": "object",
      "properties": {
         "name": {
            "type": "string",
            "description": "Skill name."
         },
         "page": {
            "type": "integer",
            "description": "Page on which the skill is found."
         },
         "imageUrl": {
            "type": "string",
            "description": "URL for skill image."
         },
         "characteristic": {
            "type": "string",
            "description": "Characteristic (generally) linked to the skill."
         },
         "category": {
            "type": "string",
            "enum": [
               "general",
               "knowledge",
               "combat",
               "magic",
               "social",
               "other"
            ],
            "description": "Skill category."
         },
         "description": {
            "type": "array",
            "items": {
               "type": "string"
            },
            "description": "Skill details."
         },
         "shouldUse": {
            "type": "array",
            "items": {
               "type": "string"
            },
            "description": "Suggested reasons to use the skill."
         },
         "shouldNotUse": {
            "type": "array",
            "items": {
               "type": "string"
            },
            "description": "Examples of when {@i not} to use the skill."
         },
         "spells": {
            "type": "array",
            "description": "Spells which can be used with the skill.",
            "items": {
               "type": "object",
               "properties": {
                  "name": {
                     "type": "string",
                     "description": "Spell name."
                  },
                  "source": {
                     "type": "string",
                     "description": "Spell source (if not in this collection)."
                  }
               },
               "required": [
                  "name"
               ],
               "optional": [
                  "source"
               ],
               "additionalProperties": false
            }
         },
         "settings": { "$ref": "settings_sub_schema.json" }
      },
      "required": [
         "name",
         "characteristic",
         "category",
         "description",
         "shouldUse",
         "shouldNotUse"
      ],
      "optional": [
         "imageUrl",
         "page",
         "spells",
         "settings"
      ],
      "additionalProperties": false
   }
}