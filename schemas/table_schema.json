{
   "$id": "https://silentarctic.github.io/schemas/table_schema.json",
   "type": "array",
   "items": {
      "type": "object",
      "properties": {
         "name": {
            "type": "string"
         },
         "page": {
            "type": "integer"
         },
         "subtitle": {
            "type": "string"
         },
         "foot": {
            "type": "string"
         },
         "columns": {
            "type": "array",
            "items": {
               "type": "object",
               "properties": {
                  "header": {
                     "type": "string"
                  },
                  "value": {
                     "type": "string"
                  },
                  "size": {
                     "type": "integer"
                  }
               },
               "required": [
                  "header"
               ],
               "optional": [
                  "value",
                  "size"
               ],
               "additionalProperties": false
            }
         },
         "rows": {
            "type": "array",
            "items": {
               "oneOf": [
                  {
                     "type": "object",
                     "title": "Subtitle",
                     "properties": {
                        "subtitle": {
                           "type": "string"
                        }
                     },
                     "optional": [
                        "subtitle"
                     ]
                  },
                  {
                     "type": "object",
                     "title": "Cell",
                     "patternProperties": {
                        "^.*$": {
                           "type": "string"
                        }
                     }
                  }
               ]
            }
         },
         "id": {
            "type": "string",
            "description": "Unique item id. You shouldn't have to touch this field."
         }
      },
      "required": [
         "name",
         "columns",
         "rows"
      ],
      "optional": [
         "page",
         "subtitle",
         "foot"
      ],
      "additionalProperties": false
   }
}