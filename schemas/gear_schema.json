{
   "$id": "https://silentarctic.github.io/schemas/gear_schema.json",
   "type": "array",
   "items": {
      "type": "object",
      "properties": {
         "name": {
            "type": "string",
            "description": "Gear name."
         },
         "type": {
            "type": "string",
            "enum": [
               "alchemy",
               "armor",
               "artifact",
               "attachment",
               "cybernetic",
               "g-mod",
               "gear",
               "implement",
               "magic",
               "mount",
               "treasure",
               "weapon"
            ],
            "description": "Type of gear. Different types have different properties available."
         },
         "class": {
            "type": "string",
            "description": "Subcategory for the gear. Ex: Military, Energy, etc."
         },
         "page": {
            "type": "integer",
            "description": "Source page reference."
         },
         "imageUrl": {
            "type": "string",
            "description": "Url to an image of the gear."
         },
         "description": {
            "$ref": "./varyingDisplay_sub_schema.json",
            "description": "Item description. Advanced descriptions can only be modified with a json editor."
         },
         "price": {
            "description": "Value of the gear.",
            "oneOf": [
               {
                  "type": "integer",
                  "title": "value",
                  "description": "Numerical value of the gear."
               },
               {
                  "type": "string",
                  "title": "default option",
                  "description": "Some items can't be valued monetarily. These values provided options to indicate that.",
                  "enum": [
                     "priceless",
                     "n/a",
                     "if you have to ask..."
                  ]
               }
            ]
         },
         "restricted": {
            "type": "boolean",
            "description": "If the gear is a restricted item."
         },
         "rarity": {
            "type": [
               "integer",
               "null"
            ],
            "description": "How rare the gear is."
         },
         "modifiers": {
            "type": "array",
            "items": {
               "type": "object",
               "properties": {
                  "name": {
                     "type": "string"
                  },
                  "type": {
                     "type": "string",
                     "enum": [
                        "characteristic",
                        "skill",
                        "derived",
                        "own stat"
                     ]
                  },
                  "value": {
                     "type": [
                        "string",
                        "integer"
                     ]
                  }
               },
               "required": [
                  "name",
                  "value"
               ],
               "optional": [
                  "type"
               ],
               "additionalProperties": false
            }
         },
         "settings": {
            "$ref": "./settings_sub_schema.json",
            "description": "Override global content pack settings for this item."
         },
         "id": {
            "type": "string",
            "description": "Unique item id. You shouldn't have to touch this field."
         }
      },
      "required": [
         "name",
         "type",
         "description",
         "price",
         "rarity"
      ],
      "optional": [
         "imageUrl",
         "page",
         "class",
         "modifiers",
         "settings"
      ],
      "allOf": [
         {
            "if": {
               "properties": {
                  "type": {
                     "const": "weapon"
                  }
               }
            },
            "then": {
               "properties": {
                  "skill": {
                     "type": "object",
                     "properties": {
                        "name": {
                           "type": "string",
                           "description": "Skill used to attack with the weapon."
                        },
                        "source": {
                           "type": "string",
                           "description": "Source of the skill (abbreviation)."
                        }
                     },
                     "required": [
                        "name"
                     ],
                     "optional": [
                        "source"
                     ],
                     "additionalProperties": false
                  },
                  "damage": {
                     "type": [
                        "string",
                        "integer"
                     ],
                     "description": "Base damage of the weapon. Melee weapons likely have a \"+\" prefix to indicate the use's Brawn should be added to the damage."
                  },
                  "critical": {
                     "type": "integer",
                     "description": "Number of advantages required to trigger a critical hit with the weapon."
                  },
                  "range": {
                     "type": "string",
                     "enum": [
                        "Engaged",
                        "Short",
                        "Medium",
                        "Long",
                        "Extreme",
                        "Strategic"
                     ],
                     "description": "The weapon's maximum effective range."
                  },
                  "encumbrance": {
                     "type": "integer",
                     "description": "Encumbrance of the weapon."
                  },
                  "hardPoints": {
                     "type": "integer",
                     "description": "How many hardpoints the weapon has."
                  },
                  "special": {
                     "type": "array",
                     "description": "List of weapon qualities",
                     "items": {
                        "type": "object",
                        "properties": {
                           "name": {
                              "type": "string",
                              "description": "Weapon quality name."
                           },
                           "value": {
                              "type": "integer",
                              "description": "Quality ranks (if any)."
                           },
                           "source": {
                              "type": "string",
                              "description": "Source of the quality (abbreviation) (\"likely CRB\") if not found in this content pack."
                           }
                        },
                        "required": [
                           "name"
                        ],
                        "optional": [
                           "value",
                           "source"
                        ],
                        "additionalProperties": false
                     }
                  }
               },
               "required": [
                  "skill",
                  "damage",
                  "critical",
                  "range",
                  "encumbrance"
               ],
               "optional": [
                  "hardPoints",
                  "restricted",
                  "special"
               ]
            }
         },
         {
            "if": {
               "properties": {
                  "type": {
                     "const": "armor"
                  }
               }
            },
            "then": {
               "properties": {
                  "defense": {
                     "type": "integer",
                     "description": "Amount of defense provided by the armor."
                  },
                  "soak": {
                     "type": "string",
                     "description": "Amount of soak provided by the armor."
                  },
                  "encumbrance": {
                     "type": "integer",
                     "description": "Encumbrance of the armor."
                  },
                  "hardPoints": {
                     "type": "integer",
                     "description": "How many hardpoints the armor has."
                  },
                  "special": {
                     "type": "array",
                     "description": "Armor qualities.",
                     "items": {
                        "type": "object",
                        "properties": {
                           "name": {
                              "type": "string",
                              "description": "Armor quality name."
                           },
                           "value": {
                              "type": "integer",
                              "description": "Quality ranks (if any)."
                           },
                           "source": {
                              "type": "string",
                              "description": "Source of the quality (abbreviation) (\"likely CRB\") if not found in this content pack."
                           }
                        },
                        "required": [
                           "name"
                        ],
                        "optional": [
                           "value",
                           "source"
                        ],
                        "additionalProperties": false
                     }
                  }
               },
               "required": [
                  "defense",
                  "soak",
                  "encumbrance"
               ],
               "optional": [
                  "hardPoints",
                  "special"
               ]
            }
         },
         {
            "if": {
               "properties": {
                  "type": {
                     "enum": [
                        "gear",
                        "treasure",
                        "alchemy",
                        "artifact",
                        "magic",
                        "mount"
                     ]
                  }
               }
            },
            "then": {
               "properties": {
                  "encumbrance": {
                     "type": [
                        "string",
                        "integer"
                     ],
                     "description": "Encumbrance of the gear. Use negative values for items like backpacks that increase encumbrance capacity."
                  }
               },
               "optional": [
                  "encumbrance"
               ]
            }
         },
         {
            "if": {
               "properties": {
                  "type": {
                     "enum": [
                        "cybernetic",
                        "g-mod"
                     ]
                  }
               }
            },
            "then": {
               "properties": {},
               "required": [],
               "optional": []
            }
         },
         {
            "if": {
               "properties": {
                  "type": {
                     "const": "implement"
                  }
               }
            },
            "then": {
               "properties": {
                  "damage": {
                     "type": "string",
                     "description": "Damage added to the Attack spell."
                  },
                  "encumbrance": {
                     "type": "integer",
                     "description": "Encumbrance of the implement."
                  }
               },
               "required": [
                  "damage",
                  "encumbrance"
               ]
            }
         },
         {
            "if": {
               "properties": {
                  "type": {
                     "const": "attachment"
                  }
               }
            },
            "then": {
               "properties": {
                  "hardPoints": {
                     "type": "integer",
                     "description": "How many hardpoints the attachment requires."
                  },
                  "qualities": {
                     "type": "array",
                     "items": {
                        "type": "object",
                        "properties": {
                           "name": {
                              "type": "string",
                              "description": "Attachment quality name."
                           },
                           "ranks": {
                              "type": [
                                 "string",
                                 "integer"
                              ],
                              "description": "Quality ranks (if any)."
                           },
                           "source": {
                              "type": "string",
                              "description": "Source of the quality (abbreviation) (\"likely CRB\") if not found in this content pack."
                           }
                        },
                        "required": [
                           "name"
                        ],
                        "optional": [
                           "ranks",
                           "source"
                        ],
                        "additionalProperties": false
                     }
                  }
               },
               "required": [
                  "hardPoints"
               ],
               "optional": [
                  "qualities"
               ]
            }
         }
      ]
   }
}