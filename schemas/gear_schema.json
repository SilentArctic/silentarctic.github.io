{
   "$id": "https://silentarctic.github.io/schemas/gear_schema.json",
   "type": "array",
   "items": {
      "type": "object",
      "properties": {
         "name": {
            "type": "string"
         },
         "type": {
            "type": "string",
            "enum": [
               "alchemy",
               "armor",
               "artifact",
               "attachment",
               "cybernetic",
               "g-mod",
               "gear",
               "implement",
               "magic",
               "mount",
               "treasure",
               "weapon"
            ]
         },
         "class": {
            "type": "string"
         },
         "page": {
            "type": "integer"
         },
         "imageUrl": {
            "type": "string"
         },
         "description": {
            "$ref": "./varyingDisplay_sub_schema.json"
         },
         "price": {
            "oneOf": [
               {
                  "type": "integer",
                  "title": "Value"
               },
               {
                  "type": "string",
                  "title": "Default option",
                  "enum": [
                     "priceless",
                     "n/a",
                     "if you have to ask..."
                  ]
               }
            ]
         },
         "restricted": {
            "type": "boolean"
         },
         "rarity": {
            "type": [
               "integer",
               "null"
            ]
         },
         "modifiers": {
            "type": "array",
            "items": {
               "type": "object",
               "properties": {
                  "name": {
                     "type": "string"
                  },
                  "type": {
                     "type": "string",
                     "enum": [
                        "characteristic",
                        "skill",
                        "derived"
                     ]
                  },
                  "value": {
                     "type": [
                        "string",
                        "integer"
                     ]
                  }
               },
               "required": [
                  "name",
                  "type",
                  "value"
               ],
               "additionalProperties": false
            }
         },
         "settings": {
            "$ref": "./settings_sub_schema.json"
         },
         "id": {
            "type": "string",
            "description": "Unique item id. You shouldn't have to touch this field."
         }
      },
      "required": [
         "name",
         "type",
         "description",
         "price",
         "rarity"
      ],
      "optional": [
         "imageUrl",
         "page",
         "class",
         "modifiers",
         "settings"
      ],
      "allOf": [
         {
            "if": {
               "properties": {
                  "type": {
                     "const": "weapon"
                  }
               }
            },
            "then": {
               "properties": {
                  "skill": {
                     "type": "object",
                     "properties": {
                        "name": {
                           "type": "string"
                        },
                        "source": {
                           "type": "string"
                        }
                     },
                     "required": [
                        "name"
                     ],
                     "optional": [
                        "source"
                     ],
                     "additionalProperties": false
                  },
                  "damage": {
                     "type": [
                        "string",
                        "integer"
                     ]
                  },
                  "critical": {
                     "type": "integer"
                  },
                  "range": {
                     "type": "string",
                     "enum": [
                        "Engaged",
                        "Short",
                        "Medium",
                        "Long",
                        "Extreme",
                        "Strategic"
                     ]
                  },
                  "encumbrance": {
                     "type": "integer"
                  },
                  "hardPoints": {
                     "type": "integer"
                  },
                  "special": {
                     "type": "array",
                     "items": {
                        "type": "object",
                        "properties": {
                           "name": {
                              "type": "string"
                           },
                           "value": {
                              "type": "integer"
                           },
                           "source": {
                              "type": "string"
                           }
                        },
                        "required": [
                           "name"
                        ],
                        "optional": [
                           "value",
                           "source"
                        ],
                        "additionalProperties": false
                     }
                  }
               },
               "required": [
                  "skill",
                  "damage",
                  "critical",
                  "range",
                  "encumbrance"
               ],
               "optional": [
                  "hardPoints",
                  "restricted",
                  "special"
               ]
            }
         },
         {
            "if": {
               "properties": {
                  "type": {
                     "const": "armor"
                  }
               }
            },
            "then": {
               "properties": {
                  "defense": {
                     "type": "integer"
                  },
                  "soak": {
                     "type": "string"
                  },
                  "encumbrance": {
                     "type": "integer"
                  },
                  "hardPoints": {
                     "type": "integer"
                  },
                  "special": {
                     "type": "array",
                     "items": {
                        "type": "object",
                        "properties": {
                           "name": {
                              "type": "string"
                           },
                           "value": {
                              "type": "integer"
                           },
                           "source": {
                              "type": "string"
                           }
                        },
                        "required": [
                           "name"
                        ],
                        "optional": [
                           "value",
                           "source"
                        ],
                        "additionalProperties": false
                     }
                  }
               },
               "required": [
                  "defense",
                  "soak",
                  "encumbrance"
               ],
               "optional": [
                  "hardPoints",
                  "special"
               ]
            }
         },
         {
            "if": {
               "properties": {
                  "type": {
                     "enum": [
                        "gear",
                        "treasure",
                        "alchemy",
                        "artifact",
                        "magic",
                        "mount"
                     ]
                  }
               }
            },
            "then": {
               "properties": {
                  "encumbrance": {
                     "type": [
                        "string",
                        "integer"
                     ]
                  },
                  "special": {
                     "type": "array",
                     "items": {
                        "type": "object",
                        "properties": {
                           "name": {
                              "type": "string"
                           },
                           "value": {
                              "type": "integer"
                           },
                           "source": {
                              "type": "string"
                           }
                        },
                        "required": [
                           "name"
                        ],
                        "optional": [
                           "value",
                           "source"
                        ],
                        "additionalProperties": false
                     }
                  }
               },
               "optional": [
                  "encumbrance",
                  "special"
               ]
            }
         },
         {
            "if": {
               "properties": {
                  "type": {
                     "enum": [
                        "cybernetic",
                        "g-mod"
                     ]
                  }
               }
            },
            "then": {
               "properties": {
               },
               "required": [],
               "optional": []
            }
         },
         {
            "if": {
               "properties": {
                  "type": {
                     "const": "implement"
                  }
               }
            },
            "then": {
               "properties": {
                  "damage": {
                     "type": "string"
                  },
                  "encumbrance": {
                     "type": "integer"
                  },
                  "special": {
                     "type": "array",
                     "items": {
                        "type": "object",
                        "properties": {
                           "name": {
                              "type": "string"
                           },
                           "value": {
                              "type": "integer"
                           },
                           "source": {
                              "type": "string"
                           }
                        },
                        "required": [
                           "name"
                        ],
                        "optional": [
                           "value",
                           "source"
                        ],
                        "additionalProperties": false
                     }
                  }
               },
               "required": [
                  "damage",
                  "encumbrance"
               ],
               "optional": [
                  "special"
               ]
            }
         },
         {
            "if": {
               "properties": {
                  "type": {
                     "const": "attachment"
                  }
               }
            },
            "then": {
               "properties": {
                  "hardPoints": {
                     "type": "integer"
                  },
                  "qualities": {
                     "type": "array",
                     "items": {
                        "type": "object",
                        "properties": {
                           "name": {
                              "type": "string"
                           },
                           "ranks": {
                              "type": [
                                 "string",
                                 "integer"
                              ]
                           },
                           "source": {
                              "type": "string"
                           }
                        },
                        "required": [
                           "name"
                        ],
                        "optional": [
                           "ranks",
                           "source"
                        ],
                        "additionalProperties": false
                     }
                  },
                  "modifiers": {
                     "type": "array",
                     "items": {
                        "type": "object",
                        "properties": {
                           "name": {
                              "type": "string"
                           },
                           "value": {
                              "type": [
                                 "string",
                                 "integer"
                              ]
                           }
                        },
                        "required": [
                           "name",
                           "value"
                        ],
                        "additionalProperties": false
                     }
                  }
               },
               "required": [
                  "hardPoints"
               ],
               "optional": [
                  "qualities",
                  "modifiers"
               ]
            }
         }
      ]
   }
}