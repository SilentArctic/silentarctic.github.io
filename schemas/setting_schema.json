{
   "$id": "https://silentarctic.github.io/schemas/setting_schema.json",
   "type": "array",
   "items": [
      {
         "type": "object",
         "properties": {
            "name": {
               "type": "string"
            },
            "page": {
               "type": "integer"
            },
            "summary": {
               "type": "array",
               "items": {
                  "type": "string"
               }
            },
            "lore": { "$ref": "varyingDisplay_sub_schema.json" },
            "codex": { "$ref": "varyingDisplay_sub_schema.json" },
            "characterOptions": { "$ref": "varyingDisplay_sub_schema.json" }
         },
         "required": [
            "name"
         ],
         "optional": [
            "page",
            "summary",
            "lore",
            "codex",
            "characterOptions"
         ],
         "additionalProperties": false
      }
   ]
}