{
   "$id": "https://silentarctic.github.io/schemas/adventure_schema.json",
   "type": "array",
   "items": {
      "type": "object",
      "properties": {
         "name": {
            "type": "string"
         },
         "chapters": { "$ref": "varyingDisplay_sub_schema.json" },
         "settings": { "$ref": "settings_sub_schema.json" },
         "id": {
            "type": "string",
            "description": "Unique item id. You shouldn't have to touch this field."
         }
      },
      "required": [
         "name",
         "chapters"
      ],
      "optional": [
         "settings"
      ],
      "additionalProperties": false
   }
}