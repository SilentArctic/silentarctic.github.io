{
   "$id": "https://silentarctic.github.io/schemas/archetype_schema.json",
   "type": "array",
   "items": [
      {
         "type": "object",
         "properties": {
            "name": {
               "type": "string"
            },
            "nickname": {
               "type": "string"
            },
            "characteristics": {
               "type": "object",
               "properties": {
                  "brawn": {
                     "type": "integer"
                  },
                  "agility": {
                     "type": "integer"
                  },
                  "intellect": {
                     "type": "integer"
                  },
                  "cunning": {
                     "type": "integer"
                  },
                  "willpower": {
                     "type": "integer"
                  },
                  "presence": {
                     "type": "integer"
                  }
               },
               "required": [
                  "brawn",
                  "agility",
                  "intellect",
                  "cunning",
                  "willpower",
                  "presence"
               ],
               "additionalProperties": false
            },
            "page": {
               "type": "integer"
            },
            "imageUrl": {
               "type": "string"
            },
            "wt": {
               "type": "integer"
            },
            "st": {
               "type": "integer"
            },
            "xp": {
               "type": "integer"
            },
            "skills": {
               "type": "object",
               "properties": {
                  "skills": {
                     "type": "array",
                     "items": {
                        "type": "string"
                     }
                  },
                  "ranksTotal": {
                     "type": "integer"
                  },
                  "ranksEach": {
                     "type": "integer"
                  },
                  "description": {
                     "type": "array",
                     "items": {
                        "type": "string"
                     }
                  },
                  "choice": {
                     "type": "boolean"
                  }
               },
               "required": [
                  "skills",
                  "ranksTotal",
                  "ranksEach",
                  "description",
                  "choice"
               ],
               "additionalProperties": false
            },
            "abilities": {
               "type": "array",
               "items": {
                  "type": "object",
                  "properties": {
                     "name": {
                        "type": "string"
                     },
                     "description": {
                        "type": "array",
                        "items": {
                           "oneOf": [
                              {
                                 "type": "string"
                              },
                              {
                                 "type": "object",
                                 "properties": {
                                    "type": {
                                       "type": "string",
                                       "enum": ["list", "list-no-bullet"]
                                    },
                                    "items": {
                                       "type": "array",
                                       "items": {
                                          "type": "string"
                                       }
                                    }
                                 },
                                 "required": [
                                    "type",
                                    "items"
                                 ],
                                 "additionalProperties": false
                              }
                           ]
                        }
                     }
                  },
                  "required": [
                     "name",
                     "description"
                  ],
                  "additionalProperties": false
               }
            },
            "description": {
               "type": "array",
               "items": {
                  "type": "string"
               }
            },
            "why": {
               "type": "array",
               "items": {
                  "type": "string"
               }
            },
            "settings": { "$ref": "./settings_sub_schema.json" }
         },
         "required": [
            "name",
            "wt",
            "st",
            "xp",
            "skills",
            "abilities",
            "description"
         ],
         "optional": [
            "page",
            "nickname",
            "imageUrl",
            "why",
            "settings"
         ],
         "additionalProperties": false
      }
   ]
}