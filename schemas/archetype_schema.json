{
   "$id": "https://silentarctic.github.io/schemas/archetype_schema.json",
   "type": "array",
   "items": {
      "type": "object",
      "properties": {
         "name": {
            "type": "string",
            "description": "Archetype or Species name."
         },
         "nickname": {
            "type": "string",
            "description": "Optional nickname (ideal for keeping similar archetypes together ie. Dwarf (Dunwarr) and Dwarf (Forge)."
         },
         "characteristics": {
            "oneOf": [
               {
                  "type": "object",
                  "title": "Standard",
                  "properties": {
                     "brawn": {
                        "type": "integer",
                        "description": "Starting Brawn."
                     },
                     "agility": {
                        "type": "integer",
                        "description": "Starting Agility."
                     },
                     "intellect": {
                        "type": "integer",
                        "description": "Starting Intellect."
                     },
                     "cunning": {
                        "type": "integer",
                        "description": "Starting Cunning."
                     },
                     "willpower": {
                        "type": "integer",
                        "description": "Starting Willpower."
                     },
                     "presence": {
                        "type": "integer",
                        "description": "Starting Presence."
                     }
                  },
                  "required": [
                     "brawn",
                     "agility",
                     "intellect",
                     "cunning",
                     "willpower",
                     "presence"
                  ],
                  "additionalProperties": false
               },
               {
                  "type": "array",
                  "title": "Archetype Pair",
                  "items": {
                     "type": "object",
                     "properties": {
                        "brawn": {
                           "type": "integer",
                           "description": "Starting Brawn."
                        },
                        "agility": {
                           "type": "integer",
                           "description": "Starting Agility."
                        },
                        "intellect": {
                           "type": "integer",
                           "description": "Starting Intellect."
                        },
                        "cunning": {
                           "type": "integer",
                           "description": "Starting Cunning."
                        },
                        "willpower": {
                           "type": "integer",
                           "description": "Starting Willpower."
                        },
                        "presence": {
                           "type": "integer",
                           "description": "Starting Presence."
                        }
                     },
                     "required": [
                        "brawn",
                        "agility",
                        "intellect",
                        "cunning",
                        "willpower",
                        "presence"
                     ],
                     "additionalProperties": false
                  }
               }
            ]
         },
         "page": {
            "type": "integer",
            "description": "Source page reference."
         },
         "imageUrl": {
            "type": "string",
            "description": "Url for a related image."
         },
         "wt": {
            "oneOf": [
               {
                  "type": "integer",
                  "title": "Standard",
                  "description": "Wound threshold."
               },
               {
                  "type": "array",
                  "title": "Archetype Pair",
                  "description": "Wound threshold.",
                  "items": {
                     "type": "integer"
                  }
               }
            ]
         },
         "st": {
            "oneOf": [
               {
                  "type": "integer",
                  "title": "Standard",
                  "description": "Strain threshold."
               },
               {
                  "type": "array",
                  "title": "Archetype Pair",
                  "description": "Strain threshold.",
                  "items": {
                     "type": "integer"
                  }
               }
            ]
         },
         "xp": {
            "type": "integer",
            "description": "Starting XP."
         },
         "skills": {
            "type": "object",
            "description": "Starting skill ranks.",
            "properties": {
               "skills": {
                  "type": "array",
                  "description": "Starting skill options.",
                  "items": {
                     "type": "string"
                  }
               },
               "ranksTotal": {
                  "type": "integer",
                  "description": "Meta field. # of total ranks this archetype starts with."
               },
               "ranksEach": {
                  "type": "integer",
                  "description": "Meta field. # of ranks each skill receives."
               },
               "description": {
                  "type": "array",
                  "description": "Text displayed on the archetype. This is *not* derived from the other fields here due to the vast variety of possibilities.",
                  "items": {
                     "type": "string"
                  }
               },
               "choice": {
                  "type": "boolean",
                  "description": "If the player has a choice between skills to put starting ranks into."
               }
            },
            "required": [
               "skills",
               "ranksTotal",
               "ranksEach",
               "description",
               "choice"
            ],
            "additionalProperties": false
         },
         "abilities": {
            "type": "array",
            "description": "List of unique archetype abilities",
            "items": {
               "oneOf": [
                  {
                     "type": "string",
                     "title": "Standard"
                  },
                  {
                     "type": "object",
                     "title": "Archetype Pair",
                     "properties": {
                        "description": {
                           "type": "array",
                           "items": {
                              "type": "string"
                           }
                        }
                     }
                  }
               ]
            }
         },
         "description": {
            "type": "array",
            "description": "Adversary description.",
            "items": {
               "type": "string"
            }
         },
         "why": {
            "type": "array",
            "description": "Reasons why one would choose to play as this archetype.",
            "items": {
               "type": "string"
            }
         },
         "names": {
            "type": "object",
            "description": "Suggested names for this archetype.",
            "properties": {
               "description": {
                  "type": "array",
                  "description": "Brief description about this archetype's naming conventions.",
                  "items": {
                     "type": "string"
                  }
               },
               "names": {
                  "type": "array",
                  "description": "List of suggested names.",
                  "items": {
                     "type": "string"
                  }
               }
            }
         },
         "settings": {
            "$ref": "./settings_sub_schema.json",
            "description": "Override global content pack settings for this item."
         },
         "id": {
            "type": "string",
            "description": "Unique item id. You shouldn't have to touch this field."
         }
      },
      "required": [
         "name",
         "wt",
         "st",
         "xp",
         "skills",
         "abilities",
         "description"
      ],
      "optional": [
         "page",
         "nickname",
         "imageUrl",
         "why",
         "names",
         "settings"
      ],
      "additionalProperties": false
   }
}