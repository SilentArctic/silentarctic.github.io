{
   "$id": "https://silentarctic.github.io/schemas/vehicle_schema.json",
   "type": "array",
   "items": {
      "type": "object",
      "properties": {
         "name": {
            "type": "string",
            "description": "Vehicle name."
         },
         "page": {
            "type": "integer",
            "description": "Page the vehicle can be found on."
         },
         "variant": {
            "type": "boolean",
            "description": "If this vehicle is a variant of another vehicle (variants are created as separate entries)."
         },
         "hasVariants": {
            "type": "boolean",
            "description": "If this vehicle has any variants."
         },
         "imageUrl": {
            "type": "string",
            "description": "Url to an image of the vehicle."
         },
         "silhouette": {
            "type": "integer",
            "description": "The vehicle's silhouette."
         },
         "maxSpeed": {
            "type": "integer",
            "description": "The vehicle's max speed."
         },
         "handling": {
            "type": "integer",
            "description": "The vehicle's handling."
         },
         "defense": {
            "type": "integer",
            "description": "The vehicle's innate defense."
         },
         "armor": {
            "type": "integer",
            "description": "The vehicle's armor."
         },
         "htt": {
            "type": "integer",
            "description": "The vehicle's hull trauma threshold."
         },
         "sst": {
            "type": "integer",
            "description": "The vehicle's system strain threshold."
         },
         "controlSkill": {
            "type": "object",
            "description": "Skill used when making control checks.",
            "properties": {
               "name": {
                  "type": "string",
                  "description": "Name of the control skill."
               },
               "source": {
                  "type": "string",
                  "description": "Source of the skill (abbreviation) if not found in this content pack (example: CRB)."
               }
            },
            "required": [
               "name"
            ],
            "optional": [
               "source"
            ],
            "additionalProperties": false
         },
         "complement": {
            "type": "string",
            "description": "Number of crew required to operate this vehicle."
         },
         "passengers": {
            "type": ["string", "integer"],
            "description": "Number of passengers that can comfortably occupy this vehicle."
         },
         "consumables": {
            "type": "string",
            "description": "Amount of consumables (hours, days, weeks, etc) this vehicle holds before needing to restock."
         },
         "encumbranceCapacity": {
            "type": ["string", "integer"],
            "description": "Total encumbrance this vehicle can hold."
         },
         "ftlRange": {
            "type": "string",
            "enum": [
               "None",
               "Short",
               "Medium",
               "Long",
               "Extreme"
            ],
            "description": "Distance the vehicle can travel at faster-than-light speeds."
         },
         "ftlSpeed": {
            "type": "string",
            "enum": [
               "none",
               "slow",
               "average",
               "fast",
               "very fast"
            ],
            "description": "How fast this vehicle can travel at faster-than-light speeds."
         },
         "price": {
            "type": "integer",
            "description": "Cost of the vehicle."
         },
         "rarity": {
            "type": "integer",
            "description": "How rare the vehicle is."
         },
         "restricted": {
            "type": "boolean",
            "description": "If the vehicle is restricted."
         },
         "weapons": {
            "type": "array",
            "items": {
               "type": "object",
               "properties": {
                  "name": {
                     "type": "string",
                     "description": "Weapon name."
                  },
                  "description": {
                     "type": "string",
                     "description": "Vehicle description."
                  },
                  "fireArc": {
                     "type": "string",
                     "description": "Angle at which the weapon can fire."
                  },
                  "skill": {
                     "type": "object",
                     "properties": {
                        "name": {
                           "type": "string",
                           "description": "Skill to use the weapon."
                        },
                        "source": {
                           "type": "string",
                           "description": "Source of the skill (abbreviation) if not found in this content pack (example: CRB)."
                        }
                     },
                     "required": [
                        "name"
                     ],
                     "optional": [
                        "source"
                     ],
                     "additionalProperties": false
                  },
                  "damage": {
                     "type": "integer",
                     "description": "Weapon damage."
                  },
                  "critical": {
                     "type": "integer",
                     "description": "Advantages required to trigger a critical hit."
                  },
                  "range": {
                     "type": "string",
                     "enum": ["Engaged", "Short", "Medium", "Long", "Extreme", "Strategic"],
                     "description": "Weapon's maximum range."
                  },
                  "qualities": {
                     "type": "array",
                     "items": {
                        "type": "object",
                        "properties": {
                           "name": {
                              "type": "string",
                              "description": "Weapon quality name."
                           },
                           "ranks": {
                              "type": "integer",
                              "description": "Quality ranks."
                           },
                           "source": {
                              "type": "string",
                              "description": "Source of the quality (abbreviation) if not found in this content pack."
                           }
                        },
                        "required": [
                           "name"
                        ],
                        "optional": [
                           "value",
                           "source"
                        ],
                        "additionalProperties": false
                     }
                  },
                  "details": {
                     "type": "string",
                     "description": "Extra weapon details."
                  }
               },
               "required": [
                  "name"
               ],
               "optional": [
                  "description",
                  "skill",
                  "damage",
                  "critical",
                  "range",
                  "qualities",
                  "details"
               ],
               "additionalProperties": false
            }
         },
         "abilities": {
            "type": "array",
            "items": {
               "type": "object",
               "properties": {
                  "name": {
                     "type": "string",
                     "description": "Vehicle ability name."
                  },
                  "description": {
                     "type": "string",
                     "description": "Ability description."
                  }
               },
               "required": [
                  "name"
               ],
               "optional": [
                  "description"
               ],
               "additionalProperties": false
            }
         },
         "description": { "$ref": "./varyingDisplay_sub_schema.json" },
         "settings": { "$ref": "./settings_sub_schema.json" },
         "id": {
            "type": "string",
            "description": "Unique item id. You shouldn't have to touch this field."
         }
      },
      "required": [
         "name",
         "silhouette",
         "maxSpeed",
         "handling",
         "defense",
         "armor",
         "htt",
         "sst",
         "controlSkill",
         "complement",
         "consumables",
         "encumbranceCapacity",
         "rarity",
         "description"
      ],
      "optional": [
         "page",
         "variant",
         "hasVariants",
         "imageUrl",
         "passengers",
         "weapons",
         "abilities",
         "ftlRange",
         "ftlSpeed",
         "price",
         "restricted",
         "settings"
      ],
      "additionalProperties": false
   }
}