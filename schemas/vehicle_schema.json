{
   "$id": "https://silentarctic.github.io/schemas/vehicle_schema.json",
   "type": "array",
   "items": {
      "type": "object",
      "properties": {
         "name": {
            "type": "string"
         },
         "page": {
            "type": "integer"
         },
         "variant": {
            "type": "boolean"
         },
         "hasVariants": {
            "type": "boolean"
         },
         "imageUrl": {
            "type": "string"
         },
         "silhouette": {
            "type": "integer"
         },
         "maxSpeed": {
            "type": "integer"
         },
         "handling": {
            "type": "integer"
         },
         "defense": {
            "type": "integer"
         },
         "armor": {
            "type": "integer"
         },
         "htt": {
            "type": "integer"
         },
         "sst": {
            "type": "integer"
         },
         "controlSkill": {
            "type": "object",
            "properties": {
               "name": {
                  "type": "string"
               },
               "source": {
                  "type": "string"
               }
            },
            "required": [
               "name"
            ],
            "optional": [
               "source"
            ],
            "additionalProperties": false
         },
         "complement": {
            "type": "string"
         },
         "passengers": {
            "type": ["string", "integer"]
         },
         "consumables": {
            "type": "string"
         },
         "encumbranceCapacity": {
            "type": ["string", "integer"]
         },
         "ftlRange": {
            "type": "string",
            "enum": [
               "None",
               "Short",
               "Medium",
               "Long",
               "Extreme"
            ]
         },
         "ftlSpeed": {
            "type": "string",
            "enum": [
               "none",
               "slow",
               "average",
               "fast",
               "very fast"
            ]
         },
         "price": {
            "type": "integer"
         },
         "rarity": {
            "type": "integer"
         },
         "restricted": {
            "type": "boolean"
         },
         "weapons": {
            "type": "array",
            "items": {
               "type": "object",
               "properties": {
                  "name": {
                     "type": "string"
                  },
                  "description": {
                     "type": "string"
                  },
                  "fireArc": {
                     "type": "string"
                  },
                  "skill": {
                     "type": "object",
                     "properties": {
                        "name": {
                           "type": "string"
                        },
                        "source": {
                           "type": "string"
                        }
                     },
                     "required": [
                        "name"
                     ],
                     "additionalProperties": false
                  },
                  "damage": {
                     "type": "integer"
                  },
                  "critical": {
                     "type": "integer"
                  },
                  "range": {
                     "type": "string",
                     "enum": ["Engaged", "Short", "Medium", "Long", "Extreme", "Strategic"]
                  },
                  "qualities": {
                     "type": "array",
                     "items": {
                        "type": "object",
                        "properties": {
                           "name": {
                              "type": "string"
                           },
                           "ranks": {
                              "type": "integer"
                           },
                           "source": {
                              "type": "string"
                           }
                        },
                        "required": [
                           "name"
                        ],
                        "optional": [
                           "value",
                           "source"
                        ],
                        "additionalProperties": false
                     }
                  },
                  "details": {
                     "type": "string"
                  }
               },
               "required": [
                  "name"
               ],
               "optional": [
                  "description",
                  "skill",
                  "damage",
                  "critical",
                  "range",
                  "qualities",
                  "details"
               ],
               "additionalProperties": false
            }
         },
         "abilities": {
            "type": "array",
            "items": {
               "type": "object",
               "properties": {
                  "name": {
                     "type": "string"
                  },
                  "description": {
                     "type": "string"
                  }
               },
               "required": [
                  "name"
               ],
               "optional": [
                  "description"
               ],
               "additionalProperties": false
            }
         },
         "description": { "$ref": "varyingDisplay_sub_schema.json" },
         "settings": { "$ref": "settings_sub_schema.json" }
      },
      "required": [
         "name",
         "silhouette",
         "maxSpeed",
         "handling",
         "defense",
         "armor",
         "htt",
         "sst",
         "controlSkill",
         "complement",
         "consumables",
         "encumbranceCapacity",
         "rarity",
         "description"
      ],
      "optional": [
         "page",
         "variant",
         "hasVariants",
         "imageUrl",
         "passengers",
         "weapons",
         "abilities",
         "ftlRange",
         "ftlSpeed",
         "price",
         "restricted",
         "settings"
      ],
      "additionalProperties": false
   }
}