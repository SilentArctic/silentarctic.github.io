{
   "$id": "https://silentarctic.github.io/schemas/career_schema.json",
   "type": "array",
   "items": {
      "type": "object",
      "properties": {
         "name": {
            "type": "string",
            "description": "Career name."
         },
         "page": {
            "type": "integer",
            "description": "Page on which the career is found."
         },
         "skills": {
            "type": "array",
            "description": "List of career skills.",
            "minItems": 8,
            "maxItems": 8,
            "items": {
               "type": "object",
               "properties": {
                  "name": {
                     "type": "string",
                     "description": "Skill name."
                  },
                  "source": {
                     "type": "string",
                     "description": "Skill source (if not in this collection)."
                  }
               },
               "required": [
                  "name"
               ],
               "optional": [
                  "source"
               ],
               "additionalProperties": false
            }
         },
         "description": {
            "type": "array",
            "description": "Career details.",
            "items": {
               "type": "string"
            }
         },
         "startingGear": {
            "type": "object",
            "description": "Optional starting gear gained from the career.",
            "properties": {
               "description": {
                  "type": "array",
                  "description": "Starting gear fluff.",
                  "items": {
                     "type": "string"
                  }
               },
               "gear": {
                  "type": "array",
                  "description": "List of starting gear.",
                  "items": {
                     "type": "string"
                  }
               }
            },
            "required": [
               "description",
               "gear"
            ],
            "additionalProperties": false
         },
         "usefulTalents": {
            "type": "object",
            "description": "Talent suggestions to build the career's theme.",
            "properties": {
               "description": {
                  "type": "array",
                  "description": "Useful talent fluff.",
                  "items": {
                     "type": "string"
                  }
               },
               "talents": {
                  "type": "array",
                  "description": "List of useful talents.",
                  "items": {
                     "type": "object",
                     "properties": {
                        "name": {
                           "type": "string",
                           "description": "Talent name."
                        },
                        "tier": {
                           "type": "integer",
                           "description": "Talent tier."
                        },
                        "source": {
                           "type": "string",
                           "description": "Talent source (if not in this collection)."
                        }
                     },
                     "required": [
                        "tier",
                        "name"
                     ],
                     "optional": [
                        "source"
                     ],
                     "additionalProperties": false
                  }
               }
            },
            "required": [
               "description",
               "talents"
            ],
            "additionalProperties": false
         },
         "settings": { "$ref": "settings_sub_schema.json" }
      },
      "required": [
         "name",
         "skills",
         "description"
      ],
      "optional": [
         "startingGear",
         "usefulTalents",
         "page",
         "settings"
      ],
      "additionalProperties": false
   }
}