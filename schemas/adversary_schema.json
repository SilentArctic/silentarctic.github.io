{
   "$id": "https://silentarctic.github.io/schemas/adversary_schema.json",
   "type": "array",
   "items": {
      "type": "object",
      "properties": {
         "name": {
            "type": "string",
            "description": "Adversary name."
         },
         "page": {
            "type": "integer",
            "description": "Page on which the adversary is found."
         },
         "type": {
            "type": "string",
            "enum": [
               "minion",
               "rival",
               "nemesis"
            ],
            "description": "Type of adversary. One of {@code minion}, {@code rival}, {@code nemesis}."
         },
         "hasVariants": {
            "type": "boolean",
            "description": "If the adversary has variant adversaries."
         },
         "variant": {
            "type": "boolean",
            "description": "If the adversary is a variant of another adversary."
         },
         "characteristics": {
            "type": "object",
            "properties": {
               "brawn": {
                  "type": "integer",
                  "minimum": 0,
                  "description": "Adversary's brawn."
               },
               "agility": {
                  "type": "integer",
                  "minimum": 0,
                  "description": "Adversary's agility."
               },
               "intellect": {
                  "type": "integer",
                  "minimum": 0,
                  "description": "Adversary's intellect."
               },
               "cunning": {
                  "type": "integer",
                  "minimum": 0,
                  "description": "Adversary's cunning."
               },
               "willpower": {
                  "type": "integer",
                  "minimum": 0,
                  "description": "Adversary's willpower."
               },
               "presence": {
                  "type": "integer",
                  "minimum": 0,
                  "description": "Adversary's presence."
               }
            },
            "description": "Adversary characteristics",
            "required": [
               "brawn",
               "agility",
               "intellect",
               "cunning",
               "willpower",
               "presence"
            ],
            "additionalProperties": false
         },
         "derived": {
            "type": "object",
            "description": "Attributes calculated based on other sources. Insert base values here.",
            "properties": {
               "soak": {
                  "type": "integer",
                  "minimum": 0,
                  "description": "Adversary's soak."
               },
               "wounds": {
                  "type": "integer",
                  "minimum": 1,
                  "description": "Adversary's wound threshold."
               },
               "strain": {
                  "type": "integer",
                  "minimum": 1,
                  "description": "Adversary's strain threshold. Omit for minions and rivals."
               },
               "defense": {
                  "type": "array",
                  "minItems": 2,
                  "maxItems": 2,
                  "items": {
                     "type": "integer"
                  },
                  "description": "Array of two integers. First value is melee defense, second value is ranged defense."
               }
            },
            "required": [
               "soak",
               "wounds",
               "defense"
            ],
            "optional": [
               "strain"
            ],
            "additionalProperties": false
         },
         "powerLevels": {
            "type": "object",
            "description": "Adversary's power levels (see EPG pg. 84).",
            "properties": {
               "combat": {
                  "type": "integer",
                  "description": "Adversary's combat value."
               },
               "social": {
                  "type": "integer",
                  "description": "Adversary's social value."
               },
               "general": {
                  "type": "integer",
                  "description": "Adversary's general value."
               }
            },
            "required": [
               "combat",
               "general",
               "social"
            ],
            "additionalProperties": false
         },
         "skills": {
            "type": "array",
            "description": "List of adversary's skills.",
            "items": {
               "type": "object",
               "properties": {
                  "name": {
                     "type": "string",
                     "description": "Skill name."
                  },
                  "characteristic": {
                     "type": "string",
                     "description": "Characteristic tied to the skill.",
                     "enum": [
                        "brawn",
                        "agility",
                        "intellect",
                        "cunning",
                        "willpower",
                        "presence"
                     ]
                  },
                  "ranks": {
                     "type": "integer",
                     "minimum": 0,
                     "maximum": 5,
                     "description": "Skill ranks, omit for minions."
                  },
                  "source": {
                     "type": "string",
                     "description": "Source of the skill (if not in this collection)."
                  }
               },
               "required": [
                  "name",
                  "characteristic"
               ],
               "optional": [
                  "ranks",
                  "source"
               ],
               "additionalProperties": false
            }
         },
         "motivations": {
            "type": "array",
            "description": "List of adversary's motivations, if any.",
            "items": {
               "type": "object",
               "properties": {
                  "name": {
                     "type": "string",
                     "description": "Motivation name"
                  },
                  "description": {
                     "type": "string",
                     "description": "Motivation details."
                  }
               },
               "required": [
                  "name",
                  "description"
               ],
               "additionalProperties": false
            }
         },
         "talents": {
            "type": "array",
            "description": "List of adversary's talents.",
            "items": {
               "oneOf": [
                  {
                     "type": "string",
                     "builder_label": "string",
                     "description": "Talent name."
                  },
                  {
                     "type": "object",
                     "builder_label": "object",
                     "properties": {
                        "name": {
                           "type": "string",
                           "description": "Talent name."
                        },
                        "description": {
                           "type": "string",
                           "description": "Talent description."
                        }
                     },
                     "required": [
                        "name",
                        "description"
                     ],
                     "additionalProperties": false
                  }
               ]
            }
         },
         "abilities": {
            "type": "array",
            "description": "Adversary's abilities.",
            "items": {
               "type": ["object", "string"],
               "properties": {
                  "name": {
                     "type": "string",
                     "description": "Ability name."
                  },
                  "description": {
                     "type": "string",
                     "description": "Ability details."
                  }
               },
               "required": [
                  "name",
                  "description"
               ],
               "additionalProperties": false
            }
         },
         "spells": {
            "type": "object",
            "description": "List of adversary's spells, if any.",
            "properties": {
               "skills": {
                  "type": "array",
                  "description": "List of magic skills the adversary can use.",
                  "items": {
                     "type": "object",
                     "properties": {
                        "name": {
                           "type": "string",
                           "description": "Skill name."
                        },
                        "source": {
                           "type": "string",
                           "description": "Skill source (if not in this collection)."
                        }
                     },
                     "required": [
                        "name"
                     ],
                     "optional": [
                        "source"
                     ],
                     "additionalProperties": false
                  }
               },
               "spells": {
                  "type": "array",
                  "description": "List of spells the adversary frequently uses.",
                  "items": {
                     "type": "object",
                     "properties": {
                        "name": {
                           "type": "string",
                           "description": "Spell name."
                        },
                        "description": {
                           "type": "string",
                           "description": "Spell details."
                        }
                     },
                     "required": [
                        "name",
                        "description"
                     ],
                     "additionalProperties": false
                  }
               }
            },
            "required": [
               "skills",
               "spells"
            ],
            "additionalProperties": false
         },
         "weapons": {
            "type": "array",
            "description": "List of adversary's weapons, if any.",
            "items": {
               "type": "object",
               "properties": {
                  "name": {
                     "type": "string",
                     "description": "Weapon name."
                  },
                  "skill": {
                     "type": "object",
                     "properties": {
                        "name": {
                           "type": "string"
                        },
                        "source": {
                           "type": "string"
                        }
                     },
                     "required": [
                        "name"
                     ],
                     "optional": [
                        "source"
                     ],
                     "additionalProperties": false
                  },
                  "damage": {
                     "type": "integer",
                     "description": "Weapon damage value."
                  },
                  "critical": {
                     "type": "integer",
                     "description": "Weapon crit value."
                  },
                  "range": {
                     "type": "string",
                     "description": "Weapon range. One of {@code Engaged}, {@code Short}, {@code Medium}, {@code Long}, {@code Extreme}, {@code Strategic}",
                     "enum": [
                        "Engaged",
                        "Short",
                        "Medium",
                        "Long",
                        "Extreme",
                        "Strategic"
                     ]
                  },
                  "qualities": {
                     "type": "array",
                     "description": "List of the weapon's qualities.",
                     "items": {
                        "type": "object",
                        "builder_label": "object",
                        "properties": {
                           "name": {
                              "type": "string",
                              "description": "Quality name."
                           },
                           "ranks": {
                              "type": "integer",
                              "description": "Quality ranks (if necessary)."
                           },
                           "source": {
                              "type": "string",
                              "description": "Quality source (if not in this collection)."
                           }
                        },
                        "required": [
                           "name"
                        ],
                        "optional": [
                           "ranks",
                           "source"
                        ],
                        "additionalProperties": false
                     }
                  },
                  "details": {
                     "type": "string",
                     "description": "Extra weapon details."
                  }
               },
               "required": [
                  "name",
                  "skill",
                  "damage",
                  "critical",
                  "range"
               ],
               "optional": [
                  "qualities",
                  "details"
               ],
               "additionalProperties": false
            }
         },
         "gear": {
            "type": "array",
            "description": "List of adversary's gear.",
            "items": {
               "type": "string"
            }
         },
         "description": { "$ref": "varyingDisplay_sub_schema.json" },
         "settings": { "$ref": "settings_sub_schema.json" },
         "tags": {
            "type": "array",
            "items": {
               "type": "string"
            }
         }
      },
      "required": [
         "name",
         "type",
         "characteristics",
         "derived",
         "skills"
      ],
      "optional": [
         "page",
         "variant",
         "hasVariants",
         "description",
         "powerLevels",
         "motivations",
         "talents",
         "abilities",
         "equipment",
         "gear",
         "tags",
         "settings"
      ],
      "additionalProperties": false
   }
}