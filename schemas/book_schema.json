{
   "$id": "https://silentarctic.github.io/schemas/book_schema.json",
   "type": "array",
   "items": {
      "type": "object",
      "properties": {
         "name": {
            "type": "string",
            "description": "Book title."
         },
         "subtitle": {
            "type": "string",
            "description": "Book subtitle."
         },
         "releaseYear": {
            "type": "integer",
            "description": "Book's release year."
         },
         "coverImageUrl": {
            "type": "string",
            "description": "Url to a cover image for the book."
         },
         "coverBackgroundUrl": {
            "type": "string",
            "description": "Deprecated."
         },
         "backgroundUrl": {
            "type": "string",
            "description": "Url for an image to be used as the background for each page."
         },
         "credits": {
            "type": "object",
            "description": "List of accredited people.",
            "patternProperties": {
               "^[a-zA-Z ]*$": {
                  "type": "array",
                  "items": {
                     "type": "string"
                  }
               }
            }
         },
         "chapters": { "$ref": "varyingDisplay_sub_schema.json" },
         "id": {
            "type": "string",
            "description": "Unique item id. You shouldn't have to touch this field."
         }
      },
      "required": [
         "name",
         "chapters"
      ],
      "optional": [
         "subtitle",
         "releaseYear",
         "coverImageUrl",
         "coverBackgroundUrl",
         "backgroundUrl",
         "credits"
      ],
      "additionalProperties": false
   }
}