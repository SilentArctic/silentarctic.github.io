{
   "$id": "https://silentarctic.github.io/schemas/book_schema.json",
   "type": "array",
   "items": {
      "type": "object",
      "properties": {
         "name": {
            "type": "string"
         },
         "subtitle": {
            "type": "string"
         },
         "releaseYear": {
            "type": "integer"
         },
         "coverImageUrl": {
            "type": "string"
         },
         "coverBackgroundUrl": {
            "type": "string"
         },
         "backgroundUrl": {
            "type": "string"
         },
         "credits": {
            "type": "object",
            "patternProperties": {
               "^[a-zA-Z ]*$": {
                  "type": "array",
                  "items": {
                     "type": "string"
                  }
               }
            }
         },
         "chapters": { "$ref": "_varyingDisplay_schema.json" }
      },
      "required": [
         "name",
         "chapters"
      ],
      "optional": [
         "subtitle",
         "releaseYear",
         "coverImageUrl",
         "coverBackgroundUrl",
         "backgroundUrl",
         "credits"
      ],
      "additionalProperties": false
   }
}