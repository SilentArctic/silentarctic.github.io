{
   "$id": "https://silentarctic.github.io/schemas/characteristic_schema.json",
   "type": "array",
   "items": {
      "type": "object",
      "properties": {
         "name": {
            "type": "string",
            "description": "Characteristic name."
         },
         "description": {
            "type": "array",
            "description": "Characteristic description.",
            "items": {
               "type": "string"
            }
         },
         "page": {
            "type": "integer",
            "description": "Source page reference."
         },
         "id": {
            "type": "string",
            "description": "Unique item id. You shouldn't have to touch this field."
         }
      },
      "required": [
         "name",
         "description"
      ],
      "optional": [
         "page"
      ],
      "additionalProperties": false
   }
}