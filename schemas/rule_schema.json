{
   "$id": "https://silentarctic.github.io/schemas/rule_schema.json",
   "type": "array",
   "items": {
      "type": "object",
      "properties": {
         "name": {
            "type": "string",
            "description": "Rule name."
         },
         "page": {
            "type": "integer",
            "description": "Source page reference."
         },
         "type": {
            "type": "string",
            "description": "Rule category. Rule type properties are computed to create filter options, so it's best to use existing types if possible to improve filtering."
         },
         "description": { "$ref": "./varyingDisplay_sub_schema.json" },
         "id": {
            "type": "string",
            "description": "Unique item id. You shouldn't have to touch this field."
         }
      },
      "required": [
         "name",
         "type",
         "description"
      ],
      "optional": [
         "page"
      ],
      "additionalProperties": false
   }
}