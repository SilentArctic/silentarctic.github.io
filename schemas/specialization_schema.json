{
   "$id": "https://silentarctic.github.io/schemas/specialization_schema.json",
   "$defs": {
      "talentRow": {
         "type": "array",
         "minItems": 4,
         "maxItems": 4,
         "items": {
            "type": "object",
            "properties": {
               "name": {
                  "type": "string"
               },
               "right": {
                  "type": "boolean"
               },
               "down": {
                  "type": "boolean"
               },
               "source": {
                  "type": "string"
               }
            },
            "required": [
               "name"
            ],
            "optional": [
               "right",
               "down",
               "source"
            ],
            "additionalProperties": false
         }
      }
   },
   "type": "array",
   "items": {
      "type": "object",
      "properties": {
         "name": {
            "type": "string"
         },
         "page": {
            "type": "integer"
         },
         "imageUrl": {
            "type": "string"
         },
         "career": {
            "type": "object",
            "properties": {
               "name": {
                  "type": "string"
               },
               "source": {
                  "type": "string"
               }
            },
            "required": [
               "name"
            ],
            "optional": [
               "source"
            ],
            "additionalProperties": false
         },
         "skills": {
            "type": "array",
            "items": {
               "type": "object",
               "properties": {
                  "name": {
                     "type": "string"
                  },
                  "source": {
                     "type": "string"
                  }
               },
               "required": [
                  "name"
               ],
               "optional": [
                  "source"
               ],
               "additionalProperties": false
            }
         },
         "talents": {
            "type": "object",
            "properties": {
               "row1": {
                  "$ref": "#/$defs/talentRow"
               },
               "row2": {
                  "$ref": "#/$defs/talentRow"
               },
               "row3": {
                  "$ref": "#/$defs/talentRow"
               },
               "row4": {
                  "$ref": "#/$defs/talentRow"
               },
               "row5": {
                  "$ref": "#/$defs/talentRow"
               }
            }
         },
         "description": {
            "type": "array",
            "items": {
               "type": "string"
            }
         },
         "settings": {
            "$ref": "./settings_sub_schema.json"
         },
         "id": {
            "type": "string",
            "description": "Unique item id. You shouldn't have to touch this field."
         }
      },
      "required": [
         "name",
         "talents"
      ],
      "optional": [
         "page",
         "imageUrl",
         "career",
         "skills",
         "description",
         "settings"
      ],
      "additionalProperties": false
   }
}