{
   "$id": "https://silentarctic.github.io/schemas/specialization_schema.json",
   "type": "array",
   "items": {
      "type": "object",
      "properties": {
         "name": {
            "type": "string"
         },
         "page": {
            "type": "integer"
         },
         "imageUrl": {
            "type": "string"
         },
         "career": {
            "type": "object",
            "properties": {
               "name": {
                  "type": "string"
               },
               "source": {
                  "type": "string"
               }
            },
            "required": [
               "name"
            ],
            "optional": [
               "source"
            ],
            "additionalProperties": false
         },
         "skills": {
            "type": "array",
            "items": {
               "type": "object",
               "properties": {
                  "name": {
                     "type": "string"
                  },
                  "source": {
                     "type": "string"
                  }
               },
               "required": [
                  "name"
               ],
               "optional": [
                  "source"
               ],
               "additionalProperties": false
            }
         },
         "talents": {
            "type": "object",
            "properties": {
               "row1": { "$ref": "specialization_talent_row_sub_schema.json" },
               "row2": { "$ref": "specialization_talent_row_sub_schema.json" },
               "row3": { "$ref": "specialization_talent_row_sub_schema.json" },
               "row4": { "$ref": "specialization_talent_row_sub_schema.json" },
               "row5": { "$ref": "specialization_talent_row_sub_schema.json" }
            }
         },
         "description": {
            "type": "array",
            "items": {
               "type": "string"
            }
         },
         "settings": {
            "$ref": "./settings_sub_schema.json"
         },
         "id": {
            "type": "string",
            "description": "Unique item id. You shouldn't have to touch this field."
         }
      },
      "required": [
         "name",
         "talents"
      ],
      "optional": [
         "page",
         "imageUrl",
         "career",
         "skills",
         "description",
         "settings"
      ],
      "additionalProperties": false
   }
}