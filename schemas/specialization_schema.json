{
   "$id": "https://silentarctic.github.io/schemas/specialization_schema.json",
   "$defs": {
      "talentRow": {
         "type": "array",
         "maxItems": 4,
         "items": {
            "type": "object",
            "properties": {
               "name": {
                  "type": "string",
                  "description": "Talent name."
               },
               "right": {
                  "type": "boolean",
                  "description": "If the talent should connect to the talent to its right."
               },
               "down": {
                  "type": "boolean",
                  "description": "If the talent should connect to the talent underneath."
               },
               "source": {
                  "type": "string",
                  "description": "Talent source (abbreviation). Example: crb."
               }
            },
            "required": [
               "name"
            ],
            "optional": [
               "right",
               "down",
               "source"
            ],
            "additionalProperties": false
         }
      }
   },
   "type": "array",
   "items": {
      "type": "object",
      "properties": {
         "name": {
            "type": "string",
            "description": "Specialization name."
         },
         "page": {
            "type": "integer",
            "description": "Source page reference."
         },
         "imageUrl": {
            "type": "string",
            "description": "Url to a related image."
         },
         "career": {
            "type": "object",
            "description": "Career the specialization is for.",
            "properties": {
               "name": {
                  "type": "string",
                  "description": "Career name."
               },
               "source": {
                  "type": "string",
                  "description": "Career source (abbreviation). Example: crb."
               }
            },
            "required": [
               "name"
            ],
            "optional": [
               "source"
            ],
            "additionalProperties": false
         },
         "skills": {
            "type": "array",
            "description": "List of skills for the specialization.",
            "items": {
               "type": "object",
               "properties": {
                  "name": {
                     "type": "string",
                     "description": "Skill name."
                  },
                  "source": {
                     "type": "string",
                     "description": "Skill source (abbreviation). Example: crb"
                  }
               },
               "required": [
                  "name"
               ],
               "optional": [
                  "source"
               ],
               "additionalProperties": false
            }
         },
         "talents": {
            "type": "object",
            "description": "Set of talents for the specialization. Each row is allowed up to 4 talents",
            "properties": {
               "row1": {
                  "$ref": "#/$defs/talentRow"
               },
               "row2": {
                  "$ref": "#/$defs/talentRow"
               },
               "row3": {
                  "$ref": "#/$defs/talentRow"
               },
               "row4": {
                  "$ref": "#/$defs/talentRow"
               },
               "row5": {
                  "$ref": "#/$defs/talentRow"
               }
            }
         },
         "description": {
            "type": "array",
            "description": "Specialization description.",
            "items": {
               "type": "string",
               "description": "Specialization description."
            }
         },
         "settings": {
            "$ref": "./settings_sub_schema.json",
            "description": "Override global content pack settings for this item."
         },
         "id": {
            "type": "string",
            "description": "Unique item id. You shouldn't have to touch this field."
         }
      },
      "required": [
         "name",
         "talents"
      ],
      "optional": [
         "page",
         "imageUrl",
         "career",
         "skills",
         "description",
         "settings"
      ],
      "additionalProperties": false
   }
}