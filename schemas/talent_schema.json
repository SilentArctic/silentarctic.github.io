{
   "$id": "https://silentarctic.github.io/schemas/talent_schema.json",
   "type": "array",
   "items": {
      "type": "object",
      "properties": {
         "name": {
            "type": "string"
         },
         "imageUrl": {
            "type": "string"
         },
         "page": {
            "type": "integer"
         },
         "prerequisites": {
            "oneOf": [
               {
                  "title": "Yes / No",
                  "type": "boolean"
               },
               {
                  "title": "Named Prereqs",
                  "type": "array",
                  "items": {
                     "type": "string"
                  }
               }
            ]
         },
         "tier": {
            "type": "integer",
            "minimum": 1,
            "maximum": 5
         },
         "activation": {
            "type": "string",
            "enum": [
               "passive",
               "active (incidental, out of turn)",
               "active (incidental)",
               "active (maneuver)",
               "active (action)"
            ]
         },
         "ranked": {
            "type": "boolean"
         },
         "description": {
            "type": "array",
            "items": {
               "type": "string"
            }
         },
         "tags": {
            "$ref": "item_tags_sub_schema.json"
         },
         "settings": {
            "$ref": "settings_sub_schema.json"
         },
         "id": {
            "type": "string",
            "description": "Unique item id. You shouldn't have to touch this field."
         }
      },
      "required": [
         "name",
         "tier",
         "activation",
         "ranked",
         "description"
      ],
      "optional": [
         "imageUrl",
         "page",
         "prerequisites",
         "settings",
         "tags"
      ],
      "additionalProperties": false
   }
}